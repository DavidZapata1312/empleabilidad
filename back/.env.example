# Server
# Puerto donde correrá la app (por defecto 3000 si se deja vacío)
PORT=3000
NODE_ENV=development

# DATABASE: puedes usar DATABASE_URL (recomendado) o las variables separadas
# Ejemplo de DATABASE_URL: postgres://user:password@host:5432/databasename
DATABASE_URL=

# Si no usas DATABASE_URL rellena las siguientes:
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=empleabilidad

# SSL flags (si tu Postgres usa SSL)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# TypeORM (development)
# WARNING: sincronizar en producción puede borrar/alterar datos
TYPEORM_SYNC=false
TYPEORM_LOGGING=false

# JWT - Autenticación
# Cambia esto por una clave larga y secreta en producción
JWT_SECRET=REPLACE_WITH_A_STRONG_SECRET
# Tiempo de expiración del access token (ej: 15m, 1h, 1d)
JWT_EXPIRES=15m

# API Key (opcional) - si implementas protección por API Key
API_KEY=

# Opcionales / integraciones
MONGO_URI=

# Ejemplo para Aiven (opcional - usado si construyes DATABASE_URL externamente)
AIVEN_PG_PORT=
AIVEN_PG_USER=
AIVEN_PG_PASSWORD=
AIVEN_PG_NAME=

